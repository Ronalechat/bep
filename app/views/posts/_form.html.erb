<%= form_for @new_post do |f| %>
<p>
  <%= f.label :title, "Title" %>
  <br>
  <%= f.text_field :title, :size => "50", :placeholder => "Add a title"%>
</p>
<p>
<%= f.label :post, "Content" %>
<br>
<%= f.text_area :post, :placeholder => "What's going on?", cols: "80", rows: "10" %>
</p>
<p>
  <%= f.label :tag_list, "Add tags" %>
  <br>
  <%= f.text_field :tag_list, :size => "50",:placeholder => "Tag your post" %>
</p>
<%= f.submit %>
<% end %>
